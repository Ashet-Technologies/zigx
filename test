#!/usr/bin/env sh
set -ex

zig build

./zig-out/bin/getserverfontnames > fontnames.txt
font=$(head -n 1 fontnames.txt)
rm fontnames.txt

./zig-out/bin/testexample
./zig-out/bin/graphics
./zig-out/bin/queryfont $font > /dev/null
./zig-out/bin/example
./zig-out/bin/fontviewer
./zig-out/bin/input

echo Success
